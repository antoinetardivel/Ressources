<ul>
<% @ressources.each do |ressource|%>
  <% if ressource.category_id == @category.id %>
    <li><%= link_to ressource.title, ressource_path(ressource) %></li>
  <% end %>
<% end %>
</ul>
<p>
  <strong>Id:</strong>
  <%= @category.id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @category.title %>
</p>

<p>
  <strong>Color:</strong>
  <%= @category.color %>
</p>

<p>
  <strong>Description:</strong>
  <%= @category.description %>
</p>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
