<div class="rs-nav shadow-smooth mt-3">
  <div class="rs-show-left d-flex">
    <div class="rs-show-title ml-3">
      <p class="text-white"><%= link_to 'Ressources', ressources_path %> > Catégories</p>
      
      <h1 class="text-white font-weight-bold rs-show-title-txt">Catégories</h1>
    </div>
  </div>
</div>
<% if user_signed_in? %>
  <%= link_to 'Nouvelle satégorie', new_category_path, :class => 'btn btn-darker shadow-smooth mt-3' %>
<% end %>
<div class="d-flex flex-wrap">
<% @categories.each do |category|%>
  <%= link_to category.title, category_path(category), :class => 'btn btn-darker shadow-smooth mr-3 mt-3' %>
<% end %>
</div>
<% if user_signed_in? %>
  <%= link_to 'Nouvelle satégorie', new_category_path, :class => 'btn btn-darker shadow-smooth  mt-3' %>
  <table class="table my-3 text-white">
    <thead>
      <tr>
        <th>Title</th>
        <th>Color</th>
        <th>Description</th>
        <th>Id</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.title %></td>
          <td><%= category.color %></td>
          <td><%= category.description %></td>
          <td><%= category.id %></td>
          <td><%= link_to 'Show', category %></td>
          <td><%= link_to 'Edit', edit_category_path(category) %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

