<%= form_with(model: ressource) do |form| %>
  <% if ressource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ressource.errors.count, "error") %> prohibited this ressource from being saved:</h2>

      <ul>
        <% ressource.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :mini_description %>
    <%= form.text_area :mini_description %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_field :link %>
  </div>

  <div class="field">
    <%= form.label :link2 %>
    <%= form.text_field :link2 %>
  </div>

  <div class="field">
    <%= form.label :author_id %>
    <%= form.select :author_id, options_for_select(Author.all.map{|a|[a.slug, a.id]})%>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select :category_id, options_for_select(Category.all.map{|c|[c.title, c.id]}) %>
  </div>

  <div class="field">
    <%= form.label :subcategory_id %>
    <%= form.select :subcategory_id, options_for_select(Subcategory.all.map{|sc|[sc.title, sc.id]}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
