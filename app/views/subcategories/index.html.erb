<p id="notice"><%= notice %></p>

<h1>Subcategories</h1>
<ul>
<% @subcategories.each do |subcategory|%>
    <li><%= link_to subcategory.title, subcategory_path(subcategory) %></li>
<% end %>
</ul>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th>Description</th>
      <th>Category</th>
      <th>Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.title %></td>
        <td><%= subcategory.color %></td>
        <td><%= subcategory.description %></td>
        <td><%= subcategory.category.title %></td>
        <td><%= subcategory.category.id %></td>
        <td><%= link_to 'Show', subcategory %></td>
        <td><%= link_to 'Edit', edit_subcategory_path(subcategory) %></td>
        <td><%= link_to 'Destroy', subcategory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subcategory', new_subcategory_path %>
