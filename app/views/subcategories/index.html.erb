<div class="rs-nav shadow-smooth mt-3">
  <div class="rs-show-left d-flex">
    <div class="rs-show-title ml-3">
      <p class="text-white"><%= link_to 'Ressources', ressources_path %> > <%= link_to 'Catégories', categories_path %> > Sous-catégories</p>
      
      <h1 class="text-white font-weight-bold rs-show-title-txt">Sous-catégories</h1>
    </div>
  </div>
</div>
<div>
<div class="d-flex mt-3">
<% @subcategories.each do |subcategory|%>
  <%= link_to subcategory.title, subcategory_path(subcategory), :class => 'btn btn-darker shadow-smooth mr-3' %>
<% end %>
</div>
<% if user_signed_in? %>
  <table class="table my-3 text-white">
    <thead>
      <tr>
        <th>Title</th>
        <th>Color</th>
        <th>Description</th>
        <th>Category</th>
        <th>Id</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @subcategories.each do |subcategory| %>
        <tr>
          <td><%= subcategory.title %></td>
          <td><%= subcategory.color %></td>
          <td><%= subcategory.description %></td>
          <td><%= subcategory.category.title %></td>
          <td><%= subcategory.category.id %></td>
          <td><%= link_to 'Show', subcategory %></td>
          <td><%= link_to 'Edit', edit_subcategory_path(subcategory) %></td>
          <td><%= link_to 'Destroy', subcategory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Nouvelle sous-catégorie', new_subcategory_path, :class => 'btn btn-darker shadow-smooth' %>
<% end %>
